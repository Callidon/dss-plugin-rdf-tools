{
  "meta": {
    "label": "Extract RDF files",
    "description": "Extract RDF files into a dataset",
    "icon": "fas fa-file-import"
  },

  "kind": "PYTHON",

  "inputRoles": [
    {
      "name": "input_managed_folders",
      "label": "Input folder(s)",
      "description": "Folder(s) containing the input files",
      "arity": "NARY",
      "required": true,
      "acceptsDataset": false,
      "acceptsManagedFolder": true
    }
  ],

  "selectableFromFolder": "input_managed_folders",

  "outputRoles": [
    {
      "name": "output_dataset",
      "label": "Output dataset",
      "description": "Dataset where the RDF data will be extracted",
      "arity": "UNARY",
      "required": true,
      "acceptsDataset": true
    }
  ],

  "params": [
    {
      "name": "output_schema",
      "label": "Output schema",
      "type": "SELECT",
      "selectChoices": [
        {
          "value": "sql_table",
          "label": "Three columns (subject, predicate, object) and one row per triple"
        },
        {
          "value": "single_column",
          "label": "Store all RDF triples in a single column"
        }
      ],
      "defaultValue": "sql_table",
      "mandatory": true
    },
    {
      "name": "single_column_output",
      "label": "Output column name",
      "type": "COLUMN",
      "columnRole": "output_dataset",
      "visibilityCondition": "model.output_schema == 'single_column'",
      "mandatory": true
    },
    {
      "name": "single_column_output_format",
      "label": "Output format",
      "type": "SELECT",
      "selectChoices": [
        {
          "value": "turtle",
          "label": "Turtle"
        },
        {
          "value": "json-ld",
          "label": "JSON-LD"
        },
        {
          "value": "xml",
          "label": "RDF XML"
        },
        {
          "value": "prettyxml",
          "label": "Pretty RDF XML"
        },
        {
          "value": "ntriples",
          "label": "N-Triples"
        },
        {
          "value": "n3",
          "label": "Notation-3"
        }
      ],
      "defaultValue": "turtle",
      "visibilityCondition": "model.output_schema == 'single_column'",
      "mandatory": true
    },
    {
      "name": "file_source_output_column",
      "label": "Store source file in a column",
      "type": "COLUMN",
      "columnRole": "output_dataset",
      "mandatory": false
    }
  ],

  "resourceKeys": []
}
